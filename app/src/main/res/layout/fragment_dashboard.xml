<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingTop="24dp"
        android:paddingBottom="16dp">

        <!-- ═══════════════════════════════════════════ -->
        <!-- HERO: Connect Button                        -->
        <!-- ═══════════════════════════════════════════ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="28dp">

            <!-- Status text -->
            <TextView
                android:id="@+id/textStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vpn_disconnected"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/status_disconnected"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.02"
                android:layout_marginBottom="4dp" />

            <!-- Server name -->
            <TextView
                android:id="@+id/textProxyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No proxy selected"
                android:textSize="14sp"
                android:textColor="@color/text_muted"
                android:layout_marginBottom="32dp" />

            <!-- Large circular connect/disconnect button -->
            <FrameLayout
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:layout_marginBottom="12dp">

                <!-- Glow ring background -->
                <View
                    android:id="@+id/viewConnectGlow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_connect_circle" />

                <!-- Power icon button -->
                <ImageButton
                    android:id="@+id/btnConnect"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_power"
                    android:background="@android:color/transparent"
                    android:scaleType="center"
                    android:contentDescription="Connect"
                    android:padding="44dp" />

            </FrameLayout>

            <!-- Tap to connect hint -->
            <TextView
                android:id="@+id/textConnectHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tap to connect"
                android:textSize="12sp"
                android:textColor="@color/text_muted"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.06"
                android:textAllCaps="true" />

        </LinearLayout>

        <!-- ═══════════════════════════════════════════ -->
        <!-- USER INFO CARD                              -->
        <!-- ═══════════════════════════════════════════ -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/BdCloud.Card"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Email row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_vpn_key"
                        android:layout_marginEnd="12dp"
                        app:tint="@color/secondary"
                        android:contentDescription="Account" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textSubscription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider"
                    android:layout_marginVertical="12dp" />

                <TextView
                    android:id="@+id/textExpires"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/text_muted"
                    android:drawablePadding="8dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ═══════════════════════════════════════════ -->
        <!-- PROXY MODE SELECTOR                         -->
        <!-- ═══════════════════════════════════════════ -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/BdCloud.Card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PROXY MODE"
                    style="@style/BdCloud.SectionTitle"
                    android:layout_marginBottom="14dp" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupMode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:singleSelection="true"
                    app:selectionRequired="true">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipSelect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select"
                        style="@style/BdCloud.Chip"
                        android:checked="true" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipAutoTest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Auto Best"
                        style="@style/BdCloud.Chip" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipLoadBalance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Load Balance"
                        style="@style/BdCloud.Chip" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipFallback"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fallback"
                        style="@style/BdCloud.Chip" />

                </com.google.android.material.chip.ChipGroup>

                <TextView
                    android:id="@+id/textError"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/error"
                    android:textSize="13sp"
                    android:visibility="gone"
                    android:layout_marginTop="8dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
