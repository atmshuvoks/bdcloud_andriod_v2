<?xml version="1.0" encoding="utf-8"?>
<!-- Large circular connect button â€” connecting state with orange ring -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer glow ring -->
    <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="oval">
            <stroke android:width="3dp" android:color="@color/connect_connecting_ring" />
            <solid android:color="@color/transparent" />
        </shape>
    </item>
    <!-- Inner fill -->
    <item android:left="12dp" android:top="12dp" android:right="12dp" android:bottom="12dp">
        <shape android:shape="oval">
            <solid android:color="@color/connect_idle" />
        </shape>
    </item>
</layer-list>
