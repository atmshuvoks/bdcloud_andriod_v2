<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ═══════════════════════════════════════════════════════ -->
    <!-- BDCLOUD Premium — Deep Space Theme System              -->
    <!-- ═══════════════════════════════════════════════════════ -->

    <!-- Base dark theme -->
    <style name="Theme.BedCloudClash" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/on_error</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="android:statusBarColor">@color/status_bar</item>
        <item name="android:navigationBarColor">@color/nav_bg</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.BedCloudClash.NoActionBar" parent="Theme.BedCloudClash">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- ─── Card Styles ─── -->

    <!-- Default glassmorphism card -->
    <style name="BdCloud.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/card_bg_solid</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">0dp</item>
        <item name="contentPadding">0dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/card_border</item>
    </style>

    <!-- Active/selected card -->
    <style name="BdCloud.Card.Active" parent="BdCloud.Card">
        <item name="strokeColor">@color/card_border_active</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- ─── Button Styles ─── -->

    <!-- Primary glow button -->
    <style name="BdCloud.Button.Primary" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/secondary</item>
        <item name="android:textColor">@color/on_secondary</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:minHeight">52dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <!-- Secondary outlined button -->
    <style name="BdCloud.Button.Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/card_border_active</item>
        <item name="android:textColor">@color/secondary</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- ─── Text Input ─── -->

    <style name="BdCloud.TextInput" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/secondary</item>
        <item name="hintTextColor">@color/secondary</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>

    <style name="BdCloud.TextInput.EditText" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- ─── Chip Styles ─── -->

    <style name="BdCloud.Chip" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_unselected_bg</item>
        <item name="chipStrokeColor">@color/card_border</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipCornerRadius">24dp</item>
        <item name="chipMinHeight">40dp</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="checkedIconVisible">false</item>
        <item name="chipIconVisible">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- ─── Section Headers ─── -->

    <style name="BdCloud.SectionTitle" parent="android:Widget.TextView">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/text_muted</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.08</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>
